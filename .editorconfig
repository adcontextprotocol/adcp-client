# EditorConfig for AdCP Client
# Enforces consistent formatting across editors and aligns with ESLint/Prettier rules

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript files (source code)
[*.{ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 120

# Hand-written JavaScript files
[*.js]
indent_style = space
indent_size = 2
max_line_length = 120

# Compiled JavaScript files (don't modify these)
[scripts/generate-*.js]
insert_final_newline = false
trim_trailing_whitespace = false

# JSX files
[*.jsx]
indent_style = space
indent_size = 2
max_line_length = 120

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Package files
[package.json]
indent_style = space
indent_size = 2

# Configuration files
[*.{config.js,config.ts,.eslintrc.js,commitlint.config.js}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Docker files
[Dockerfile*]
indent_style = space
indent_size = 2

# Git configuration
[.git*]
indent_style = space
indent_size = 2
